<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
<style>
		body {
			transition: background 10s;
			font-family: "Opensans";
		}
		body.yes {
			background-color: #5AD3D1;
		}
		body.no {
			background-color: rgba(255, 90, 94, 0.7);
		}
		h1 {
			margin-top:100px;
		}

		.button {
		    display: inline-block;
		    height: 300px;
		    width: 300px;
		    line-height: 300px;
		    font-size: 50px;
		    border-radius: 300px;
		    border: none;
		    margin-top: 150px;
		    transition: all 0.2s;
		    transform: scale3d(1,1,1);
		    background-color: #EFEFEF;
		    color: black;
			text-decoration: none !important;
			opacity: 1;
		}
		.button:hover {
			transition: all 0.2s;
			transform: scale3d(1.1,1.1,1.1);
		}
		.done .button, .done .question {
			transition: all 2s;
			transform: translate3d(0, -1000px,0);
			opacity: 0;
		}
		.done #result-container {
			opacity: 1;
		}
		#result-container {
			opacity: 0;
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			margin: auto;
			max-width: 400px;
			max-height: 400px;
		}

		.result-counter {
			transition: all 0.5s;
			transform: translate3d(0, -50px, 0);
			font-size: 50px;
			opacity: 0;
		}
		.done .result-counter {
			transition: all 0.5s;
			transform: translate3d(0, 0, 0);
			opacity: 1;
		}

		#pros {
			text-align: left;
		}

		#cons {
			text-align: right;
		}

		#note {
			font-size: 12px;
			text-align: center;
			opacity: 0;
		}
		.done #note {
			opacity: 1;
		}

		@media (max-width: 768px) { 
			#result-container {
				top:200px;
			}
		}

		@media (max-width: 401px) { 
			h1 {
				margin-top: 0px;
			}
			body {
				margin-bottom: 40px;
			}
			.button {
		    	margin-top: 0px;
			    height: 150px;
			    width: 150px;
			    line-height: 150px;
			    font-size: 30px;
			}
			.done .button {
				display: none
			}
			.done .question-container {
				display: none;
			}
			#result-container {
				top:-10000px;
			}
			.done #result-container {
				top:230px;
			}


			.result-counter {
				height: 0;
				font-size: 40px;
			}
			.done .result-counter {
				height: auto;
			}
		}

		.badge-yes {
			background-color: #4CAF50;
		}

		.badge-no {
			background-color: #F44336;
		}

		.question-form {
			margin: 60px 0;
		}

	</style>